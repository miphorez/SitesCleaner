{
  "manifest_version": 2,
  "name": "__MSG_app_name__",
  "short_name": "__MSG_app_shortname__",
  "description": "__MSG_app_description__",
  "default_locale": "ru",
  "version": "0.1.2",
  "homepage_url": "https://ilovejavaforever.wordpress.com/portfolio/portfolio-chrome-extensions/sites-cleaner/",
  "icons": {
    "16": "images/SiteCleaner(16).png",
    "48": "images/SiteCleaner(48).png",
    "128": "images/SiteCleaner(128).png"
  },

   "browser_action": {
    "default_icon": {
      "48": "images/SiteCleaner(48).png"
    },
    "default_title": "__MSG_toolbar_button__"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "scripts/background.js"
    ]
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],

  "options_page": "options/options.html",
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.online-life.club/*",
        "*://*.vk.com/*",
        "*://*.onlinemultfilmy.ru/*",
        "*://*.twitter.com/*",
        "*://*.youtube.com/*"
      ],
      "css": [
        "styles/main.css"
      ],
      "js": [
        "scripts/youtube.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "web_accessible_resources": ["scripts/stopautoplay.js"],

  "externally_connectable": {
    "matches": ["*://*.youtube.com/*"]
  },

  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "__MSG_keyboardShortcutToggle__"
    },
    "ignore": {
      "suggested_key": {
        "default": "Alt+Shift+N"
      },
      "description": "__MSG_keyboardShortcutIgnore__"
    }
  }
  


}
